{
  "tasks": {
    "fetch": "deno run --allow-net --allow-read --allow-write --allow-env scripts/fetch-changelogs.ts",
    "fetch-changelog": "deno run --allow-net --allow-read --allow-write --allow-env scripts/fetch-changelogs.ts --category=changelog",
    "fetch-blog": "deno run --allow-net --allow-read --allow-write --allow-env scripts/fetch-changelogs.ts --category=blog",
    "fetch-weekly": "deno run --allow-net --allow-read --allow-write --allow-env scripts/fetch-changelogs.ts --days=7 --weekly",
    "fetch-past-discussions": "deno run --allow-net --allow-write --allow-env scripts/fetch-past-discussions.ts",
    "post": "deno run --allow-net --allow-read --allow-env scripts/create-discussion.ts",
    "post-weekly-provider": "deno run --allow-net --allow-read --allow-env scripts/post-weekly-provider.ts",
    "preview": "deno run --allow-read --allow-write --allow-env scripts/preview-discussion.ts",
    "preview-weekly": "deno run --allow-read --allow-write --allow-env scripts/preview-discussion.ts --weekly",
    "preview-weekly-provider": "deno run --allow-read --allow-write --allow-env scripts/preview-weekly-provider.ts",
    "preview-blog": "deno run --allow-read --allow-write --allow-env scripts/preview-discussion.ts --category=blog",
    "reply-discussion": "deno run --allow-net --allow-env scripts/reply-discussion.ts",
    "test": "deno test --allow-read --ignore=scripts/fetch-changelogs_integration_test.ts",
    "test:integration": "deno test --allow-read --allow-write --allow-env scripts/fetch-changelogs_integration_test.ts"
  },
  "imports": {
    "@octokit/rest": "npm:@octokit/rest@21.0.2",
    "@octokit/graphql": "npm:@octokit/graphql@8.1.1",
    "rss-parser": "npm:rss-parser@3.13.0",
    "@std/assert": "jsr:@std/assert@1.0.11",
    "xml/": "https://deno.land/x/xml@7.0.3/"
  },
  "fmt": {
    "exclude": [
      "**/*.md"
    ]
  }
}
